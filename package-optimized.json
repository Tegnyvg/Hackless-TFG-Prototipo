{
  "name": "hackless-backend",
  "version": "1.0.0",
  "description": "Sistema integral de gestión documental para PyMEs del sector petrolero",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest --testNamePattern=auth",
    "test:documents": "jest --testNamePattern=documents",
    "test:users": "jest --testNamePattern=users",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "seed": "node seedUsers.js && node seedAdmins.js && node seedCapacitaciones.js",
    "build": "echo 'No build step required for this project'",
    "postinstall": "echo 'Installation complete. Run npm run seed to initialize data.'"
  },
  "keywords": [
    "document-management",
    "cybersecurity",
    "petroleum-industry",
    "pyme",
    "compliance",
    "hse",
    "nodejs",
    "express"
  ],
  "author": {
    "name": "Verónica García",
    "email": "veronica.garcia@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tegnyvg/Hackless-TFG-Prototipo.git"
  },
  "bugs": {
    "url": "https://github.com/Tegnyvg/Hackless-TFG-Prototipo/issues"
  },
  "homepage": "https://github.com/Tegnyvg/Hackless-TFG-Prototipo#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "multer": "^2.0.1",
    "mysql2": "^3.14.1",
    "nodemailer": "^7.0.4",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.4",
    "sequelize": "^6.37.7",
    "speakeasy": "^2.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.3.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/config/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "Informe de Pruebas Hackless",
          "outputPath": "test-report.html",
          "includeFailureMsg": true,
          "includeSuiteFailure": true
        }
      ]
    ]
  }
}
