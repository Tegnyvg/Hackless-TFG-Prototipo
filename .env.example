# ===================================
# CONFIGURACIÓN DE ENTORNO - HACKLESS
# ===================================

# Entorno de ejecución
NODE_ENV=development

# Puerto del servidor
PORT=3000

# Base de datos
MONGODB_URI=mongodb://localhost:27017/hackless
# Para MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hackless

# Configuración de sesiones
SESSION_SECRET=hackless_secret_key_2025_change_in_production

# Configuración de archivos
MAX_FILE_SIZE=10485760
# 10MB en bytes

# Configuración de email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# URLs de la aplicación
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Configuración de seguridad
BCRYPT_ROUNDS=12
JWT_SECRET=jwt_secret_key_change_in_production

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuración de cache (Redis - opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuración de testing
TEST_DATABASE_URL=mongodb://localhost:27017/hackless_test

# ===================================
# CONFIGURACIÓN LEGACY (MySQL)
# ===================================
# Mantenido para compatibilidad
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=tu_contraseña_mysql
DB_NAME=hackless_db
DB_PORT=3306

# ===================================
# NOTAS IMPORTANTES
# ===================================
# 1. Copiar este archivo como .env y configurar valores reales
# 2. Nunca subir .env al repositorio
# 3. Cambiar todos los secrets en producción
# 4. Usar variables de entorno del hosting en producción
# 5. Verificar que .env esté en .gitignore
